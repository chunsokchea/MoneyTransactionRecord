<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MoneyTransferWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />   
    <link rel="stylesheet" href="~/css/bootwatchTheme.css"/>   
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MoneyTransferWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">        
</head>
<body>
    <header>
        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-4 center-block">
            <div class="container-fluid">
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MoneyTransferWeb</a>*@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item ">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard" asp-action="Index"><i class="fa fa-solid fa-house" style="font-size:larger">&nbsp;ទំព័រដើម</i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Transactions" asp-action="Create"><i class="fa fa-desktop" style="font-size:larger">&nbsp;ប្រតិប័តការ</i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Withdraws" asp-action="Index"><i class="fa fa-desktop" style="font-size:larger">&nbsp;ដកប្រាក់</i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Transactions" asp-action="Daily"><i class="fa fa-newspaper" style="font-size:larger">&nbsp;បញ្ជីប្រចាំថ្ងៃ</i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard" asp-action="Capital"><i class="fa fa-university" style="font-size:larger">&nbsp;ប្រាក់ដើម</i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Reports" asp-action="Index"><i class="fa fa-list-alt" style="font-size:larger">&nbsp;របាយការណ៍</i></a>
                        </li>
                        <li class="nav-item dropdown" >
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-light fa-gear" style="font-size:larger">&nbsp;គ្រប់គ្រង</i></a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Clients" asp-action="Index"><i class="fa fa-user" aria-hidden="true">&nbsp;បញ្ជីអតិថិជន</i></a>
                                <a class="dropdown-item" asp-controller="Capitals" asp-action="Index"><i class="fa fa-dollar" aria-hidden="true">&nbsp;បញ្ជីប្រាក់ដើម</i></a>
                                <a class="dropdown-item" asp-controller="Institutions" asp-action="Index"><i class="fa fa-bank" aria-hidden="true">&nbsp;បញ្ជីស្ថាប័ន</i></a>
                                @*<div class="dropdown-divider"></div>*@
                                @*<a class="dropdown-item" href="#">Separated link</a>*@
                            </div>
                        </li>
                    </ul>

                </div>

                @*@Html.Partial("../../Areas/IdentityPages/Account/Manage/_ManangeNave")*@

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div> 

    <footer class="border-top footer text-muted ">
        <div class="container">
            &copy; 2022 - MoneyTransferWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>       
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)    
   
</body>
</html>
