@model MoneyTransferWeb.Models.Client

@{
	ViewData["Title"] = "Create";
}

<h1>អតិថិជនថ្មី (@Html.DisplayName(DateTime.Now.ToString("dd-MMM-yyy")))</h1>

@*<h4>Client</h4>*@
<hr />
<div class="container">
	<form asp-action="Create">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="row">
			<div class="col-md">
				<div class="form-group">
					<label asp-for="ClientName" class="control-label"></label>
					<input asp-for="ClientName" class="form-control" />
					<span asp-validation-for="ClientName" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md-2">
				<div class="form-group">
					<label asp-for="ClientSex" class="control-label"></label>
					<select asp-for="ClientSex" class="form-control" asp-items="ViewBag.Gender"></select>
					<span asp-validation-for="ClientSex" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md">
				<div class="form-group">
					<label asp-for="PhoneNo" class="control-label"></label>
					<input type="tel" asp-for="PhoneNo"  class="form-control" />
					<span asp-validation-for="PhoneNo" class="text-danger"></span>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md">
				<div class="form-group">
					<label asp-for="Address" class="control-label"></label>
					<textarea asp-for="Address" class="form-control"></textarea>
					<span asp-validation-for="Address" class="text-danger"></span>
				</div>
			</div>
			<div class="col-md">
				<div class="form-group">
					<label asp-for="Detail" class="control-label"></label>
					<textarea asp-for="Detail" class="form-control"></textarea>
					<span asp-validation-for="Detail" class="text-danger"></span>
				</div>
			</div>
		</div>

			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		
	</form>

</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

