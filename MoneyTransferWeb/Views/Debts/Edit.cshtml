@model MoneyTransferWeb.Models.Debt

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Debt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DebtID" />
            <div class="form-group">
                <label asp-for="DAmountR" class="control-label"></label>
                <input asp-for="DAmountR" class="form-control" />
                <span asp-validation-for="DAmountR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DAmountS" class="control-label"></label>
                <input asp-for="DAmountS" class="form-control" />
                <span asp-validation-for="DAmountS" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DebtOwe" /> @Html.DisplayNameFor(model => model.DebtOwe)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TransactionID" class="control-label"></label>
                <select asp-for="TransactionID" class="form-control" asp-items="ViewBag.TransactionID"></select>
                <span asp-validation-for="TransactionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
